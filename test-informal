#! /usr/bin/env fennel

(local fennel (require :fennel))
(set fennel.path (.. fennel.path ";./src/?.fnl;./src/?/init.fnl"))

(local {: initialize
        : random-parameters!
        : increment-lacunarity
        : increment-persistence
        : calc-octave
        : noise-2d} (require :hyperchromatic/noise))

(local {:initialize init
        :random-parameters! rp
        :increment-lacunarity il
        :increment-persistence ip
        :calc-octave co
        :noise-2d n2d} (require :hyperchromatic/noise))

(assert-repl)
